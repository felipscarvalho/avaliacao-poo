<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.poo.java.TableController" 
      style="-fx-background-color: white; -fx-padding: 20;">
   <children>
      <!-- Header Section -->
      <HBox alignment="CENTER" style="-fx-padding: 15;">
         <children>
            <Label text="Tabela Completa de Estudantes" 
                   style="-fx-font-size: 24px; -fx-font-weight: bold;" />
         </children>
      </HBox>
      
      <!-- Table Section -->
      <TableView fx:id="studentTable" 
                 prefHeight="550.0" 
                 prefWidth="1000.0"
                 style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-background-radius: 0 0 10 10;">
        <columns>
          <TableColumn fx:id="numeroEnemColumn" 
                       prefWidth="130.0" 
                       text="Número ENEM"
                       style="-fx-alignment: CENTER;" />
          <TableColumn fx:id="nomeColumn" 
                       prefWidth="180.0" 
                       text="Nome Completo"
                       style="-fx-alignment: CENTER-LEFT;" />
          <TableColumn fx:id="cursoColumn" 
                       prefWidth="220.0" 
                       text="Curso"
                       style="-fx-alignment: CENTER-LEFT;" />
          <TableColumn fx:id="campusColumn" 
                       prefWidth="140.0" 
                       text="Campus"
                       style="-fx-alignment: CENTER;" />
          <TableColumn fx:id="demandaColumn" 
                       prefWidth="110.0" 
                       text="Demanda"
                       style="-fx-alignment: CENTER;" />
          <TableColumn fx:id="mediaColumn" 
                       prefWidth="90.0" 
                       text="Média"
                       style="-fx-alignment: CENTER;" />
          <TableColumn fx:id="colocacaoColumn" 
                       prefWidth="110.0" 
                       text="Colocação"
                       style="-fx-alignment: CENTER;" />
          <TableColumn fx:id="estadoColumn" 
                       prefWidth="90.0" 
                       text="Estado"
                       style="-fx-alignment: CENTER;" />
          <TableColumn fx:id="anoColumn" 
                       prefWidth="80.0" 
                       text="Ano"
                       style="-fx-alignment: CENTER;" />
        </columns>
        
        <VBox.margin>
           <Insets bottom="20.0" left="20.0" right="20.0" top="0.0" />
        </VBox.margin>
      </TableView>
   </children>
</VBox>